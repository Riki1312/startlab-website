---
export interface Props {
  href?: string;
}

const { href = "#" } = Astro.props as Props;
---

<a href={href}><slot /></a>

<style>
  a {
    color: var(--text-01);
    transition: all 0.1s ease-in-out;
  }

  a:hover {
    color: var(--ui-background);
    background: var(--text-01);
  }
</style>
